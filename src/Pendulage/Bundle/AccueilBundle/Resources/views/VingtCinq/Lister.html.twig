{% extends "PendulageAccueilBundle::base.html.twig" %}

{% block title %}Pendulage 25KV{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('bundles/pendulageaccueil/jqplot/dist/jquery.jqplot.css')}}">
{% endblock %}

{% block body %}
    <h1>25KV</h1>

    {#Graph#}
    <div id="chartdiv" style="height:400px;width:950px; "></div>

    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Calcule fl√®che du fil de contact</div>
        {% for vingtCinq in listeVingtCinq %}
            {% set fa = ((1/1000) * vingtCinq.spanlenth)/1000 %}
            {{fa}}
        {% endfor %}  
    </div>

    {% block javascripts %}
        <script src="{{asset('bundles/pendulageaccueil/jqplot/dist/jquery.min.js')}}"></script>
        <script src="{{asset('bundles/pendulageaccueil/jqplot/dist/jquery.jqplot.min.js')}}"></script>


        <script>
            $(function () {
                $.jqplot('chartdiv', [[[1, 2], [3, 5.12], [5, 13.1], [7, 33.6], [9, 85.9], [11, 219.9]]],
                        {title: '25KV alternatif',
                            axes: {yaxis: {min: 0, max: 250}},
                            series: [{color: '#5FAB78'}]
                        });
            });
        </script>

    {% endblock %}

{% endblock %}
