    {% endfor %}
</div >

{% block javascripts %}
    <script>
        $("#form_recherche").submit(function () {
            var motcle = $("#test").val();
            var DATA = 'motcle=' + motcle;
            $.ajax({
                type: "POST",
                url: "{{ path('consulter_find')}}",
                data: DATA,
                cache: false,
                success: function (data) {
                    $('#resultats_recherche').html(data);
                }
            });
            return false;
        });
    </script>
{% endblock %}

{% endblock %}
